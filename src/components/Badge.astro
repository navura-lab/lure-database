---
interface Props {
  label: string;
  variant: 'new' | 'limited' | 'discontinued' | 'type';
}

const { label, variant } = Astro.props;

const variantClasses: Record<string, string> = {
  new: 'bg-amber-50 text-amber-700 border-amber-200',
  limited: 'bg-purple-50 text-purple-700 border-purple-200',
  discontinued: 'bg-gray-100 text-gray-500 border-gray-200',
  type: 'bg-sky-50 text-sky-700 border-sky-200',
};
---

<span class:list={[
  'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border',
  variantClasses[variant]
]}>
  {label}
</span>
